<templates xml:space="preserve">
    <t t-name="azk_dashboard.dashboard" owl="1">
        <div class="o_container">
            <div class="bg-white p-4 shadow rounded mb-4">
                <h2 class="text-xl font-bold mb-3">Filters</h2>
                <div class="flex flex-wrap gap-4 items-end">
                    <!-- Debug Info -->
                    <div class="text-xs text-red-500">
                        <t t-if="state.availableCountries.length === 0">
                            No countries loaded
                        </t>
                        <t t-if="state.availableYears.length === 0">
                            No years loaded
                        </t>
                    </div>

                    <!-- Status Filter -->
                    <div>
                        <label class="block text-sm font-medium mb-1">Status</label>
                        <select name="statusFilter" t-model="state.statusFilter"
                                class="border rounded px-3 py-2 w-48">
                            <option value="">All Statuses</option>
                            <option value="gold">Gold</option>
                            <option value="silver">Silver</option>
                            <option value="ready">Ready</option>
                        </select>
                    </div>

                    <!-- Country Filter -->
                    <div>
                        <label class="block text-sm font-medium mb-1">Country</label>
                        <select name="countryFilter" t-model="state.countryFilter"
                                class="border rounded px-3 py-2 w-48 max-h-60 overflow-y-auto">
                            <option value="">All Countries</option>
                            <t t-foreach="state.availableCountries" t-as="country" t-key="country">
                                <option t-att-value="country.id">
                                    <t t-esc="country.name"/>
                                </option>
                            </t>
                        </select>
                    </div>

                    <!-- Year Filter -->
                    <div>
                        <label class="block text-sm font-medium mb-1">Year First Seen</label>
                        <select name="yearFilter" t-model="state.yearFilter"
                                class="border rounded px-3 py-2 w-48 max-h-60 overflow-y-auto">
                            <option value="">All Years</option>
                            <t t-foreach="state.availableYears" t-as="year" t-key="year">
                                <option t-att-value="year">
                                    <t t-esc="year"/>
                                </option>
                            </t>
                        </select>
                    </div>

                    <!-- Filter Buttons -->
                    <div class="flex gap-2">
                        <button t-on-click="applyFilters"
                                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Apply Filters
                        </button>
                        <button t-on-click="clearFilters"
                                class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                            Clear Filters
                        </button>
                    </div>
                </div>
            </div>

            <!-- Charts -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Partner Country Charts -->
                <div class="bg-white p-4 shadow rounded">
                    <h3 class="text-lg font-semibold mb-2">Top 5 Countries by Partners</h3>
                    <canvas id="top_countries_chart" height="300"></canvas>
                </div>
                <div class="bg-white p-4 shadow rounded">
                    <h3 class="text-lg font-semibold mb-2">Bottom 5 Countries by Partners</h3>
                    <canvas id="bottom_countries_chart" height="300"></canvas>
                </div>

                <!-- Project Size Charts -->
                <div class="bg-white p-4 shadow rounded">
                    <h3 class="text-lg font-semibold mb-2">Top 5 Countries Project Size Distribution</h3>
                    <canvas id="top_project_distribution_chart" height="300"></canvas>
                </div>
                <div class="bg-white p-4 shadow rounded">
                    <h3 class="text-lg font-semibold mb-2">Bottom 5 Countries Project Size Distribution</h3>
                    <canvas id="bottom_project_distribution_chart" height="300"></canvas>
                </div>
            </div>
        </div>
    </t>
</templates>