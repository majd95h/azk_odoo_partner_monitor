<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Top 5 Countries by Active Partners (bar, stacked) -->
  <record id="view_partner_graph_top5" model="ir.ui.view">
    <field name="name">azk.partner.partner.graph.top5</field>
    <field name="model">azk.partner.partner</field>
    <field name="arch" type="xml">
      <graph string="Partners by Country &amp; Status"
             type="bar"
             stacked="1"
             sample="1">
        <field name="country_id" type="row"/>
        <field name="current_status" type="col"/>
        <field name="id" type="measure" operator="count"/>
      </graph>
    </field>
  </record>

  <!-- Project Size Distribution by Country (pie) -->
  <record id="view_partner_graph_project_size" model="ir.ui.view">
    <field name="name">azk.partner.partner.graph.project_size</field>
    <field name="model">azk.partner.partner</field>
    <field name="arch" type="xml">
      <graph string="Average Project Size by Country"
             type="pie"
             sample="1">
        <field name="country_id" type="row"/>
        <field name="average_project_size" type="measure"/>
      </graph>
    </field>
  </record>
</odoo>