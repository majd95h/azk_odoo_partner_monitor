<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_partner_dashboard_search" model="ir.ui.view">
    <field name="name">azk.partner.partner.search.dashboard</field>
    <field name="model">azk.partner.partner</field>
    <field name="arch" type="xml">
      <search string="Search Partners">
        <field name="name"/>
        <filter name="filter_active" string="Active" domain="[('current_status','=','active')]"/>
        <filter name="filter_pending" string="Pending" domain="[('current_status','=','pending')]"/>
        <group expand="1" string="Group By">
          <filter name="group_by_country" string="Country" context="{'group_by':'country_id'}"/>
          <filter name="group_by_status" string="Status" context="{'group_by':'current_status'}"/>
          <filter name="group_by_first_seen" string="First Seen" context="{'group_by':'first_seen_on'}"/>
        </group>
      </search>
    </field>
  </record>
</odoo>